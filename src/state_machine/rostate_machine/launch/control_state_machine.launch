<?xml version="1.0"?>
<launch>
    <arg name="xml_filepath" default="$(find rostate_machine)/data/control_state_machine.xml"/>
    <arg name="state_machine_name" default="control_state_machine"/>
    <arg name="dot_filepath" default="$(find rostate_machine)/data/control_state_machine.dot"/>

    <param name="$(arg state_machine_name)_node/description" textfile="$(arg xml_filepath)"/>

    <node pkg="rostate_machine" type="rostate_machine_node" name="$(arg state_machine_name)_node" output="screen" respawn="true">
        <param name="dot_filepath" value="$(arg dot_filepath)"/>
    </node>
</launch>
